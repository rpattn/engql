query GetOrganizations {
  organizations {
    id
    name
    description
  }
}

query GetEntitiesByOrg($organizationId: String!, $limit: Int = 10, $offset: Int = 0) {
  entities(organizationId: $organizationId, pagination: { limit: $limit, offset: $offset }) {
    entities {
      id
      entityType
      version
      path
      properties
      referenceValue
      createdAt
      updatedAt
    }
    pageInfo {
      totalCount
      hasNextPage
      hasPreviousPage
    }
  }
}

# --- Create a new Entity Schema ---
